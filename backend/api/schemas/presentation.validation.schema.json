{
    "getSchema":{
       "type": "string",
       "required": [
         "id"     
       ],
       "properties": {
         "id" : {
           "type": "string"
         }
       }
    },
    "postSchema":{
        "type": "object",
        "required": [
          "name",
          "entityType",
          "entityId",
          "status"     
        ],
        "properties": {
          "name" : {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "entityType" : {
            "type": "string",
            "enum": ["LEAD", "CUSTOMER"]
          },
          "status" : {
            "type": "string",
            "enum": ["SENT", "DRAFT"]
          },          
          "entityId" : {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          }
        }
     }
}
